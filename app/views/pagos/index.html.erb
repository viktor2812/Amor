<link href="css/animate.min.css" rel="stylesheet">

<div class="x_panel" style="height:100%;">
  <div class="x_title">
    <h2>Pagos</h2>
    <ul class="nav navbar-right panel_toolbox">
      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to 'Nueva solicitud de Prestamos', new_loan_path %>
          </li>
          <li>
            <%= link_to 'Listar Prestamo', loans_path%>
          </li>
        </ul>
      </li>
      <li><a class="close-link"><i class="fa fa-close"></i></a>
      </li>
    </ul>
    <div class="clearfix"></div>

  <table id="datatable-buttons" class="table table-striped table-bordered">
   <thead>
      <tr>
        <th>IDP</th>
        <th>Monto</th>
        <th>Interes</th>
        <th>Iva / Interes</th>
        <th>Total</th>
        <th>Status</th>
        <th colspan="4">Enviar</th>
      </tr>
      </thead>

      <tbody>
      <% @pago.each do |x| %>
          <tr>
            <td><%= x.id %></td>
            <td><%= x.monto_pago %></td>
            <td><%= x.interes %></td>
            <td><%= x.iva_sobre_interes %></td>
            <td><%= x.total %></td>
            <td><%= x.status_pago %></td>
            

            <td><span class="count_top"><i class="fa fa-envelope">  <%= link_to 'SMS'%></span></td>
            <td><span class="count_top"><i class="fa fa-at">  <%= link_to 'Email' %></span></td>
            <td><span class="count_top"><i class="fa fa-folder-open-o">  <%= link_to 'Ver', x%></span></td>           
          </tr>
      <% end %>
      </tbody>

    </table>

</div>
</div>
</div>

