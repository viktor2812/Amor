<div class="clearfix"></div>
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Consulta de Registro </h2>
                  <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to 'Nuevo tarjeta', new_card_path %>
                        </li>
                        <li><%= link_to 'Listar tarjeta', cards_path %>
                        </li>
                      </ul>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                  </ul>
                  <div class="clearfix"></div>
                </div>

                <div class="x_content">
                  <br />
                  <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Número de Tarjeta 
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" disabled="true" class="form-control col-md-7 col-xs-12" value="<%=@card.cardNumber.slice(0,4)%>********<%=@card.cardNumber.slice(12,16)%>"> 
                      </div>
                    </div>


                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Fecha de Expedición
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" disabled="true" class="form-control col-md-7 col-xs-12" value="<%= @card.expDate %>">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Emisor</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input class="form-control col-md-7 col-xs-12" type="text" value="<%= @card.emisor %>" disabled="true" >
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12">Status
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input disabled="true" value="<%= 
                      case @card.statuss 
                        when 0 
                          "Desactivada"
                        when 1
                          "Asignada" 
                        when 2 
                          "Activada" 
                        when 3 
                          "Cancelada" 
                        else 
                          "No hay" 
                      end %>" class="date-picker form-control col-md-7 col-xs-12" required="required" type="text">
                      </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <%= link_to t('.Editar', :default => t("helpers.links.Editar")),
                  edit_card_path(@card),
                  :class => 'btn btn-primary' %>
                  <%= link_to t('.Regresar', :default => t("helpers.links.Regresar")),
                  cards_path,
                  :class => 'btn btn-primary' %>
                      </div>
                    </div>

                  </form>

            
                </div>
                </div>
                </div>
                </div>


       